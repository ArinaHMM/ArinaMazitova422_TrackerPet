<Page x:Class="ArinaMazitova422_TrackerPet.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArinaMazitova422_TrackerPet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="400"
      Title="AuthPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,0,0,50"> Введите  логин: </TextBlock>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,10,0,0"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="100" Click="LoginBtn_Click"/>
    </Grid>
</Page>
