<UserControl x:Class="ArinaMazitova422_TrackerPet.Pages.PetCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArinaMazitova422_TrackerPet.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="ImagePet" Grid.Column="0" Width="140" Height="150" Source="{Binding Image}" Stretch="UniformToFill"/>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding DateNTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontStyle="Italic" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
